<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <!-- Main content -->
    <section class="content">
      <div class="row">
        <!-- left column -->
        <div class="col-md-8">
          <!-- general form elements -->
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">New Project</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <%= form_with(model: project, local: true) do |f| %>
              <div class="box-body">
                <div class="form-group">
                  <label for="name">Name</label>
                  <%= f.text_field :name, id: :project_name ,:class => "form-control" %>
                </div>
                <div class="form-group">
                  <label for="name">Description</label>
                  <%= f.text_area :description, id: :project_description, :class => "form-control" %>
                </div>
                <%= f.fields_for project.contributors do |t| %>
                <div class="form-group">
                  <label for="name">Developer</label> 
                  <%= select_tag("user_ids[]", options_for_select(@users, :selected => params[:user_id]), :class => "form-control", multiple: true, :size => 2) %>
                  <%#= t.select(:user_id, options_for_select(@users, :selected => params[:user_id]), {}, {:class => "form-control", :mulitple => true, :size => 2}) %>    

                </div>
                <%end %>
                
              </div>
              <!-- /.box-body -->

              <div class="box-footer">
                <%= f.submit 'Add Project', :class=>"btn btn-primary"%>
              </div>
            <% end %>
          </div>
          <!-- /.box -->
        <!--/.col (right) -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>