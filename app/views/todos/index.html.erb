 <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <!-- Main content -->
    <section class="content">
      <!-- /.row -->
      <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header">
              <h3 class="box-title">
                Todo List
              </h3>
            </div>
            
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding" >
              <div class="pull-right">
              <% if can? :create, Todo%>
                <%= link_to 'New Todo', new_todo_path, :class => "btn btn-primary" ,:style => "color:white;"%>
              <% end %>
            </div>
              <table class="table table-hover" style="margin-top:20px;"> 
               <% if @todos.present?%> 
                <thead>
                  <tr>
                     <th>Name</th>
                      <th>Description</th>
                      <th>Project</th>
                      <th>Status</th>
                      <th>Assign user</th>
                      <th>Creater</th>
                      <th colspan="2"></th>
                  </tr>
                </thead>

              <tbody>
                  <% @todos.each do |todo| %>
                  <tr>
                    <td><%= todo.name %></td>
                    <td><%= todo.description %></td>
                    <td><%= todo.project.name %></td>
                    <td><%= todo.status_type.name %></td>
                    <td><%= todo.assign_user.name %></td>
                    <td><%= todo.user.name %></td>
                    <td><%= link_to 'Edit', edit_todo_path(todo) %></td>

                    <td>
                        <% if can? :destroy, todo %>
                          <%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %>
                        <% end %>
                      </td>
                  </tr>
                <% end %>
              <% else %>
                   <tr>
                    <td colspan="3"> No todo found.</td>
                  </tr>
                <% end %>  
              </body>               
          </table>
        </div>
        <!-- /.box-body -->
      </div>
      <!-- /.box -->
    </div>
  </div>
</section>
    <!-- /.content -->
</div>